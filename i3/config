set $lwhite      #eceff4

# Set windows colors                border      background  text
client.focused                      $lblack     $lblack     $lwhite
client.unfocused                    $dblack     $dblack     $dwhite
client.focused_inactive             $dblack     $dblackl    $lblack
client.urgent                       $dred       $dred       $lwhite

