            # active_workspace      $dblue      $lblack     $ffffff
            inactive_workspace      #000000     #000000     $ffffff
            # urgent_workspace      $dred       $dblack     $lblack
    }
}

# increase brightness
bindsym XF86MonBrightnessUp exec "light -A 1"
# decrease brightness
bindsym XF86MonBrightnessDown exec "light -U 1"

