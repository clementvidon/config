[init]
    defaultBranch = main

[core]
    pager = less
	editor = vim -u NONE -N

[color "status"]
    added = green bold
    changed = yellow bold
    untracked = red bold

[gc]
    reflogExpire = 1.month.ago

#[pull]
#    rebase = true
#    autosquash = true

# [fetch]
#     prune = true

[diff]
    colorMoved = zebra
    tool = vimdiff

[merge]
    tool = vim

