[commit]
    template = ~/.gitmessage

[url "git@gitlab.infra.online.net:"]
    insteadOf = https://gitlab.infra.online.net/

[mergetool "vim"]
    cmd = vim -d -c "wincmd l" -c "norm ]c" "$LOCAL" "$MERGED" "$REMOTE"

[mergetool]
    keepBackup = false
